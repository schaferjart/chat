{
  "name": "n8n-chat-pretty",
  "version": "1.0.0",
  "description": "A beautiful, mobile-friendly chat widget for n8n workflows with conversational bubble animations",
  "main": "dist/chat.umd.js",
  "module": "dist/chat.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/chat.es.js",
      "require": "./dist/chat.umd.js",
      "types": "./dist/types/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist/types",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "n8n",
    "chat",
    "chatbot",
    "ai",
    "widget",
    "webhook",
    "conversational",
    "bubble",
    "animation"
  ],
  "author": "baufer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/baufergroup/pretty-chat.git"
  },
  "homepage": "https://chat.baufer.beauty",
  "bugs": {
    "url": "https://github.com/baufergroup/pretty-chat/issues"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "animejs": "^3.2.0"
  },
  "peerDependenciesMeta": {
    "animejs": {
      "optional": true
    }
  }
}
